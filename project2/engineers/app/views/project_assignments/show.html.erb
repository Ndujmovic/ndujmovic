<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', project_assignments_path  %></li>
      <li><%= link_to 'New', new_project_assignment_path %></li>
      <li class="active"><%= link_to 'Show', project_assignment_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Project:</b>
          <%= Project.find_by_id(@project_assignment.project_id).name %>
        </p>

        <p>
          <b>Engineer:</b>
          <%= Engineer.find_by_id(@project_assignment.engineer_id).lname %>
        </p>

        <p>
          <b>Start date:</b>
          <%= @project_assignment.sdate %>
        </p>

        <p>
          <b>Project scope:</b>
          <%= Scope.find_by_id(@project_assignment.scope_id).name %>
        </p>

        <p>
          <b>End date:</b>
          <%= @project_assignment.edate %>
        </p>
      <%= link_to 'Edit', edit_project_assignment_path(@project_assignment) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
