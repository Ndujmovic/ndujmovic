<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', project_assignments_path %></li>
      <li><%= link_to 'New', new_project_assignment_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All ProjectAssignments</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Project</th>
										<th>Engineer</th>
					          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @project_assignments.each do |project_assignment| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= project_assignment.id %>
          </td>
										<td>
						<%= link_to Project.find_by_id(project_assignment.project_id).name, project_assignment_path(project_assignment) %>
					</td>
										<td>
						<%= Engineer.find_by_id(project_assignment.engineer_id).lname %>
					</td>
										<td>
            <%= project_assignment.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', project_assignment_path(project_assignment) %> |
            <%= link_to 'edit', edit_project_assignment_path(project_assignment) %> |
            <%= link_to 'destroy', project_assignment_path(project_assignment), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @project_assignments  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
