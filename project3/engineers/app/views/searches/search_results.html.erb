<div class="block">
  <div class="secondary-navigation">
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Search Results</h2>
    <div class="inner">
     
     <%
     
     @products = @results.docs
     @total_hits = @results.total_hits
     %>

     <ol>
     <% @products.each do |p|
     -%>

     <% if p.is_a?(Engineer) then %>
     <li><%= link_to "#{p.fname} #{p.lname}", engineer_path(p) %>
     <i>(Engineer)</i>
     </li>
     <% elsif p.is_a?(Project) then %>
     <li><%= link_to p.name, project_path(p) %>
     <i>(Project)</i>
     </li>
     <% end %>
     <% end %>
     </ol>

     <p align="right"><%= @total_hits %> hits returned.</p>

     <div class="clear"></div>
     </div>
     </div>
     </div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

