<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', engineers_path  %></li>
      <li><%= link_to 'New', new_engineer_path %></li>
      <li class="active"><%= link_to 'Show', engineer_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>First name:</b>
          <%= in_place_editor_field :engineer, 'fname' %>
        </p>

        <p>
          <b>Last name:</b>
          <%= in_place_editor_field :engineer, 'lname' %>
        </p>

        <% if @engineer.emails then %>
        <%  @engineer.emails.each do |r| %>
        <p>
          <b>Email address:</b>
          <%=  r[:address] %> (<%= r[:type] %>)
        </p>

        <% end %>
        <% end %>

        <p>
          <b>Resume:</b>
          <%= text_area_tag 'Resume', @engineer.get_resume, :disabled=>true,
          :escape=>false, :size=>"100x50" %>
        </p>

        <p>
          <b>Skill level:</b>
          <%= @engineer.skill_level_id %>
        </p>

        <p>
          <b>Years_of_experience:</b>
          <%= @engineer.years_of_experience %>
        </p>
      <%= link_to 'Edit', edit_engineer_path(@engineer) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
